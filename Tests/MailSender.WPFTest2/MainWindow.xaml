<Window x:Class="MailSender.WPFTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.WPFTest2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start" Click="OnStartButtonClick"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="75"
                Margin="75,75,0,0" />
        <TextBlock Name="ResultText"  Text="Результат будет здесь"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   Margin="145,40,0,0"/>
        <ProgressBar Name="ProgressInformer" HorizontalAlignment="Left" 
                     Height="20" 
                     Margin="44,122,0,0" 
                     VerticalAlignment="Top" 
                     Width="293"/>
        <Button Content="Cancel" Click="OnCancelButtonClick"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="75"
                Margin="276,75,0,0" />

    </Grid>
</Window>
