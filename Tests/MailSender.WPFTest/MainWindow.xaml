<Window x:Class="MailSender.WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.WPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UserNameEditor" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="273"/>
        <PasswordBox x:Name="PasswordEditor" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="273"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Width="273" Height="53" Click="SendButton_OnClick" />

        <TextBox Name="MailHeader" FontSize="16" Margin="339,37,10,345" Text="Заголовок письма"/>

        <TextBox Name="MailBody" Margin="339,96,10,10" Text="Текст письма"/>
    </Grid>
</Window>
