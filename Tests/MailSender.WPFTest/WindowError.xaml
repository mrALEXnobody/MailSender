<Window x:Class="MailSender.WPFTest.WindowError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.WPFTest"
        mc:Ignorable="d"
        Title="WindowError" Height="400" Width="900">
    <Grid>
        <Label x:Name="ExceptionError" Content="Error" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="10" Margin="10,10,10,45" Height="315" Width="872">

        </Label>
        <Button x:Name="btnOK" Content="OK" Margin="0,0,30,10" Height="30" RenderTransformOrigin="0.187,0.533" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnOK_Click" />

    </Grid>
</Window>
